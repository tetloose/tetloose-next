{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "types": [
      "@types/node",
      "@types/react",
      "vitest/globals"
    ],
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@context/*": [
        "./app/context/*"
      ],
      "@foundations/*": [
        "./app/foundations/*"
      ],
      "@atoms/*": [
        "./app/atoms/*"
      ],
      "@components/*": [
        "./app/components/*"
      ],
      "@layouts/*": [
        "./app/layouts/*"
      ],
      "@hooks/*": [
        "./app/hooks/*"
      ],
      "@crud/*": [
        "./app/crud/*"
      ],
      "@utils/*": [
        "./app/utils/*"
      ],
      "@global/*": [
        "./app/global/*"
      ],
      "@styles/*": [
        "./app/styles/*"
      ],
      "@images/*": [
        "./app/images/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.scss",
    "**/*.json",
    ".next/types/**/*.ts",
    ".d.ts/*.d.ts",
    ".vitest/vitest.setup.ts"
  ],
  "exclude": [
    ".husky",
    ".scripts",
    ".vscode",
    ".next",
    "node_modules",
    "public",
    "build",
    "storybook-static",
    "coverage"
  ]
}
